# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Source code
*.bash     text eol=lf
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.css      text eol=lf
*.html     text eol=lf
*.js       text eol=lf
*.json     text eol=lf
*.jsx      text eol=lf
*.map      text eol=lf
*.sh       text eol=lf
*.ts       text eol=lf
*.tsx      text eol=lf
*.xml      text eol=lf
*.yaml     text eol=lf
*.yml      text eol=lf

# Documentation
*.md       text eol=lf
*.txt      text eol=lf
LICENSE    text eol=lf

# Binary files
*.ico      binary
*.jpg      binary
*.jpeg     binary
*.png      binary
*.gif      binary
*.tif      binary
*.tiff     binary
*.woff     binary
*.woff2    binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore     export-ignore
